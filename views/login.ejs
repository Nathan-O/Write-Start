<!DOCTYPE html>
<html>

	<head>
		<title>WriteStart | Login</title>

		<% include partials/head %>

	</head>

	<body>
		<% include partials/headerBar %>

		<div class="container" id="page-wrapper">
			<header>
				<div class="jumbotron page-header">
					<h1>Log In <small>or Sign Up</small></h1>
				</div>
			</header>

			<div id="formContainer">
				<form method="POST" action="/login">
					<div class="form-group">
						<input type="text" class="form-control" placeholder="Email" name="user[email]">
							<br/>
						<input type="password" class="form-control" placeholder="Password" name="user[password]">
							<br/>
						<label>
	      					<input type="checkbox" id="rememberUser"> Remember Me
	   					</label>

						<button class="btn btn-default" type="submit">LogIn</button>
					</div>
				</form>
			</div>


			<a href="/signup"><button class="btn btn-lg btn-success">Sign Up</button></a>

			<a href="/"><button class="btn btn-lg btn-info">Home</button></a>

			
			<footer>
				<!-- -->
			</footer>
		</div>
	</body>
</html>