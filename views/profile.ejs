			<!-- test upload full -->
			<div class="col-md-4">
				<div class="panel panel-success">
					<div class="panel-heading">
						<h3>New File</h3>
					</div>
					<div class="panel-body">		<!-- FORM HERE -->
						<!-- <form method="POST"  action="/submissions"> -->
						<form id="addNewFile">
							<div class="form-group">
								<input type="text" class="form-control" name="submission[title]" placeholder="Title" id="named">
							</div>

							<div class="form-group">
								<select class="form-control selectpicker show-tick" multiple title="Choose Genres that Apply" name="submission[genre]" id="genre-pick">
									<optgroup label="Genre">
										<option value="General">General Fiction</option>
										<option value="Adventure">Adventure</option>
										<option value="Bizarro">Bizarro</option>
										<option value="Fantasy">Fantasy</option>
										<option value="Historical">Historical Fiction</option>
										<option value="Horror">Horror</option>
										<option value="Humor/Satire">Humor/Satire</option>
										<option value="Military/War">Military/War</option>
										<option value="Mystery/Crime">Mystery/Crime</option>
										<option value="Novel Chapter (Gen.)">Novel Chapter (General)</option>
										<option value="Offbeat/Odd">Offbeat/Odd</option>
										<option value="Romance">Romance</option>
										<option value="Sci-fi">Science Fiction</option>
										<option value="Short Story (Gen.)">Short Story (General)</option>
										<option value="Thriller/Suspense">Thriller/Suspense</option>
										<option value="Western">Western</option>
										<option value="Women's Lit.">Women's Literature</option>
										<option value="Young Adult">Young Adult</option>
									</optgroup>
								</select>
							</div>

							<div class="form-group">
								<textarea id="submitted" name="submission[content]" placeholder="Paste story body here."></textarea>
							</div>

							<button class="btn btn-default btn-sm" type="submit">Add File</button>
						</form>
					</div>
				</div>
			</div>


			<!-- TEST SECTION -->
			<!--
			//////////////////////////////////////////////////////////////////////////////
			//////////////////////////////////////////////////////////////////////////////
			-->

			<!-- Button trigger modal -->
			<button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#myModal">
			  ** Add File **
			</button>

			<!-- Modal -->
			<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
				<div class="modal-dialog" role="document">
			    	<div class="modal-content">
			    		<div class="modal-header">
			        		<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
			        		<h4 class="modal-title" id="myModalLabel">Upload New File</h4>
			      		</div>
			      		<div class="modal-body">
			      			<div class="formContainer">
			      				<!-- FILE FORM -->
			      				<form method="POST" enctype="multipart/form-data">
			      					<div class="row">
			      						<input type="text" placeholder="Title" required>
			      					</div>
			      					<div class="row">
				      					<select class="selectpicker show-tick">
				      						<option>Word</option>
				      						<option>Diff Word</option>
				      						<option>Better Word</option>
				      						<option>Horrible Word</option>
				      						<option>Right Word</option>
				      						<option>Stupid Word</option>
				      					</select>
				      				</div>
				      				<div class="row">
			      						<!-- <textarea id=""></textarea> -->
			      					</div>
			      				</form>
			      				<!-- END FORM -->
			      			</div>
			      		</div>
			    		<div class="modal-footer">
			    			<p><small>* Note: all files uploaded by you are yours and cannot be used for any purpose except editing without your permission.
			        		<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
			        		<button type="button" class="btn btn-primary">Save changes</button>
			    		</div>
			    	</div>
				</div>
			</div>
			
			

			<!--
			//////////////////////////////////////////////////////////////////////////////
			//////////////////////////////////////////////////////////////////////////////
			-->
			<!-- END TEST -->


			<div class="button-group" role="group">
				<a href="/signup"><button type="button" class="btn btn-sm btn-success">Sign Up</button></a>
				<a href="/"><button type="button" class="btn btn-sm btn-info">Home</button></a>
				<a href="/fileTest"><button type="button" class="btn btn-sm btn-warning">Test File Page</button></a>
			</div>

